<div class="new-wrapper">


<div class="container">

  <h1>Enter your new cocktail here</h1>
  <div class="row-sizer">

  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
      <div class="form-fields">
      <%= simple_form_for @cocktail do |c| %>
          <%= c.input :name, label: "Name of Cocktail" %>
        <%= c.simple_fields_for :doses do |d| %>
          <%= d.input :description, label: "Dose description" %>
          <% end%>
        <%= c.simple_fields_for :ingredients do |i| %>
          <%= i.input :name, collection: @ingredients %>
        <% end%>
      <div class="button">
        <%= c.submit "Add a cocktail", class: "btn btn-danger" %>
      <% end%>
      </div>
      <div class="link">
        <%= link_to 'Back', cocktails_path, :class => "link real-link"%>
      </div>
    </div>
  </div>

  </div>

</div>


</div>
